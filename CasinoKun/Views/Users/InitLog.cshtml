@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>InitLog</title>
    <link rel="stylesheet" href="/css/infolog.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/cuenta.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/agregar.css" asp-append-version="true" />
</head>

<body>
    <div class="d-flex" id="wrapper">

        <div class="border-end bg-white" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom bg-light">BlackJack</div>
            <div class="list-group list-group-flush">
                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="#cuenta">Cuenta</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="#seguridad">Seguridad</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="#add">Agregar Fondos</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="#!">Retirar Fondos</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="#!">Ubicacion</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="#support">Soporte</a>
            </div>
        </div>

        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="sidebarToggle">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-layout-sidebar-inset" viewBox="0 0 16 16">
                            <path d="M14 2a1 1 0 0 1 1 1v10a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V3a1 1 0 0 1 1-1zM2 1a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2z" />
                            <path d="M3 4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1z" />
                        </svg>
                    </button>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                            <li class="nav-item active"><a class="nav-link" href="#!">Home</a></li>
                            <li class="nav-item"><a class="nav-link" href="#!">Link</a></li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Dropdown</a>
                                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="#!">Action</a>
                                    <a class="dropdown-item" href="#!">Another action</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#!">Something else here</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>

            </nav>





            <!-- Contenido de Cuenta -->
            <div id="cuenta" class="container rounded bg-white mt-5" style="display: none;">
                <div class="row">
                    <div class="col-md-8">
                        <div class="p-3 py-5">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div class="d-flex flex-row align-items-center back">
                                    <i class="fa fa-long-arrow-left mr-1 mb-1"></i>
                                    <h6>CUENTA</h6>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-6"><input type="text" class="form-control" placeholder="Nombre"></div>
                                <div class="col-md-6"><input type="text" class="form-control" placeholder="Apellido"></div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-6"><input type="text" class="form-control" placeholder="Correo"></div>
                                <div class="col-md-6"><input type="text" class="form-control" vplaceholder="Celular"></div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-6"><input type="text" class="form-control" placeholder="Banco"></div>
                                <div class="col-md-6"><input type="text" class="form-control" placeholder="Numero de Cuenta"></div>
                            </div>
                            <div class="mt-5 text-right"><button class="btn btn-primary profile-button" type="button">Actualizar</button></div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Fin del Contenido de Cuenta -->



            <!-- Contenido de Cuenta -->
            <div id="seguridad" class="container rounded bg-white mt-5" style="display: none;">
                <div class="row">
                    <div class="col-md-8">
                        <div class="p-3 py-5">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div class="d-flex flex-row align-items-center back">
                                    <i class="fa fa-long-arrow-left mr-1 mb-1"></i>
                                    <h6>SEGURIDAD</h6>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-6"><input type="text" class="form-control" placeholder="Contraseña Actual"></div>
                                <div class="col-md-6"><input type="text" class="form-control" placeholder="Nueva Contraseña"></div>
                                <div class="col-md-6"><input type="text" class="form-control" placeholder="Confirmar Contraseña"></div>
                            </div>
                            <div class="mt-5 text-right"><button class="btn btn-primary profile-button" type="button">Actualizar</button></div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Fin del Contenido de Cuenta -->




            <!-- Contenido de Pago -->
            <div id="add" class="container-fluid px-1 px-md-2 px-lg-4 py-5 mx-auto" style="display: none;">
                <div class="d-flex flex-row align-items-center back">
                    <i class="fa fa-long-arrow-left mr-1 mb-1"></i>
                    <h6>AGREGAR FONDOS</h6>
                </div>
                <div class="row d-flex justify-content-center">
                    <div class="col-xl-7 col-lg-8 col-md-9 col-sm-11">
                        <div class="card border-0">
                            <div class="row justify-content-center">
                                <h3 class="mb-4">Credit Card Checkout</h3>
                            </div>
                            <div class="row">
                                <div class="col-sm-7 border-line pb-3">
                                    <div class="form-group">
                                        <p class="text-muted text-sm mb-0">Name on the card</p>
                                        <input type="text" name="name" placeholder="Name" size="15">
                                    </div>
                                    <div class="form-group">
                                        <p class="text-muted text-sm mb-0">Card Number</p>
                                        <div class="row px-3">
                                            <input type="text" name="card-num" placeholder="0000 0000 0000 0000" size="18" id="cr_no" minlength="19" maxlength="19">
                                            <p class="mb-0 ml-3">/</p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <p class="text-muted text-sm mb-0">Expiry date</p>
                                        <input type="text" name="exp" placeholder="MM/YY" size="6" id="exp" minlength="5" maxlength="5">
                                    </div>
                                    <div class="form-group">
                                        <p class="text-muted text-sm mb-0">CVV/CVC</p>
                                        <input type="password" name="cvv" placeholder="000" size="1" minlength="3" maxlength="3">
                                    </div>
                                    <div class="form-group mb-0">
                                        <div class="custom-control custom-checkbox custom-control-inline">
                                            <input id="chk1" type="checkbox" name="chk" class="custom-control-input" checked>
                                            <label for="chk1" class="custom-control-label text-muted text-sm">save my card for future payment</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-5 text-sm-center justify-content-center pt-4 pb-4">
                                    <small class="text-sm text-muted">Order number</small>
                                    <h5 class="mb-5">12345678</h5>
                                    <small class="text-sm text-muted">Payment amount</small>
                                    <div class="row px-3 justify-content-sm-center">
                                        <h2 class=""><span class="text-md font-weight-bold mr-2">$</span><span class="text-danger">00.00</span></h2>
                                    </div>
                                    <button type="submit" class="btn btn-red text-center mt-4">PAY</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Fin del Contenido de Pago -->






























            <!-- Contenido de Soporte -->
            <div id="support" class="container contact-form" style="display: none;">
                <div class="d-flex flex-row align-items-center back">
                    <i class="fa fa-long-arrow-left mr-1 mb-1"></i>
                    <h6>SOPORTE</h6>
                </div>
                <div class="contact-image">
                    <img src="https://image.ibb.co/kUagtU/rocket_contact.png" alt="rocket_contact" />
                </div>
                <form method="post">
                    <h3>Drop Us a Message</h3>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" name="txtName" class="form-control" placeholder="Your Name *" value="" />
                            </div>
                            <div class="form-group">
                                <input type="text" name="txtEmail" class="form-control" placeholder="Your Email *" value="" />
                            </div>
                            <div class="form-group">
                                <input type="text" name="txtPhone" class="form-control" placeholder="Your Phone Number *" value="" />
                            </div>
                            <div class="form-group">
                                <input type="submit" name="btnSubmit" class="btnContact" value="Send Message" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <textarea name="txtMsg" class="form-control" placeholder="Your Message *" style="width: 100%; height: 150px;"></textarea>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <!-- Fin del Contenido de Soporte -->

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Función para mostrar la sección correspondiente al hacer clic en los enlaces del sidebar
        document.querySelectorAll('#sidebar-wrapper .list-group-item').forEach(function (item) {
            item.addEventListener('click', function () {
                var target = this.getAttribute('href');
                if (target === '#cuenta') {
                    document.getElementById('cuenta').style.display = 'block';
                    document.getElementById('support').style.display = 'none';
                    document.getElementById('add').style.display = 'none';
                    document.getElementById('seguridad').style.display = 'none';

                } else if (target === '#support') {
                    document.getElementById('cuenta').style.display = 'none';
                    document.getElementById('support').style.display = 'block';
                    document.getElementById('add').style.display = 'none';
                    document.getElementById('seguridad').style.display = 'none';
                } else if (target === '#add') {
                    document.getElementById('cuenta').style.display = 'none';
                    document.getElementById('support').style.display = 'none';
                    document.getElementById('add').style.display = 'block';
                    document.getElementById('seguridad').style.display = 'none';
                } else if (target === '#seguridad') {
                    document.getElementById('cuenta').style.display = 'none';
                    document.getElementById('support').style.display = 'none';
                    document.getElementById('add').style.display = 'none';
                    document.getElementById('seguridad').style.display = 'none';
                } else {
                    document.getElementById('cuenta').style.display = 'none';
                    document.getElementById('support').style.display = 'none';
                    document.getElementById('add').style.display = 'none';
                    document.getElementById('seguridad').style.display = 'none';


                }
            });
        });
    </script>

</body>
</html>
